<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Master.master.cs" Inherits="tp_webforms_gottig_ramirez.Master" %>

<!DOCTYPE html>

<html>
<head runat="server">
    <title>Virtual Shop Web</title>
    <asp:ContentPlaceHolder ID="head" runat="server">
    </asp:ContentPlaceHolder>
    <%-- Agrego Icons --%>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <%-- Fuentes de Google --%>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;1,600&display=swap" rel="stylesheet">
    <%-- Hoja de estilos personalizada --%>
    <link href="Styles/styles.css" rel="stylesheet" />
    <%-- Implementacion de Bootstrap --%>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    <form id="form1" runat="server">
        <div>

            <%-- Barra de navegacion --%>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand title" href="Home.aspx">Virtual Shop</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">About</a>
                            </li>
                        </ul>
                    </div>

                    <div class="row m-1">
                        <div class="col-6 dropstart">
                            <button class="btn btn-danger icon-favoritos dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="uil uil-heart-alt"></i> Mis Favoritos

                            </button>
                            <ul class=" dropdown-menu" style="height: 500px; overflow-y: auto;">

                                <asp:Repeater runat="server" ID="repeaterFavoritos">
                                    <ItemTemplate>
                                        <li class="dropdown-item ">
                                            <div class="col m-4" style="width: 400px;">
                                                <div class="card m-auto p-2" style="max-width: 540px;">
                                                    <div class="row g-0">
                                                        <div class="col-md-3">
                                                            <img src="<%#Eval("ImagenUrl")%>" class="img-fluid rounded-start mt-4" alt="...">
                                                        </div>
                                                        <div class="col-md-8">
                                                            <div class="card-body" style="word-break: break-all; white-space: normal;">
                                                                <div class="row">
                                                                    <div class="col">
                                                                        <h5 class="card-title"><%#Eval("Nombre") %></h5>
                                                                    </div>
                                                                </div>

                                                                <div class="row">
                                                                    <div class="col">
                                                                        <p class="card-text mt-2">$ <%#Eval("Precio") %></p>
                                                                    </div>
                                                                    <div class="col-md-4 m-auto">
                                                                        <asp:Button ID="btnEliminarFav" CssClass="btn-close" OnClick="btnEliminarFav_Click" runat="server" Text="Eliminar" />
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ItemTemplate>
                                </asp:Repeater>

                            </ul>
                        </div>

                        <div class="col-6">
                            <a class="btn btn-success icon-favoritos" data-bs-toggle="offcanvas" href="#offcanvasCarrito" role="button" aria-controls="offcanvasCarritoLabel">
                                <i class="uil uil-shopping-cart"></i> Carrito</a>
                        </div>
                    </div>
                </div>
            </nav>
            <%-- Fin Barra de navegacion --%>

            <%-- Desarrollo OffCanvas --%>
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasCarrito" aria-labelledby="offcanvasCarritoLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasExampleLabel">Su Carrito</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
                </div>
                <div class="offcanvas-body">

                    <asp:Repeater runat="server" id="repeaterCarrito">
                        <ItemTemplate>
                            <li class="dropdown-item ">
                                            <div class="col m-4" style="width: 85%;">
                                                <div class="card m-auto p-2" style="max-width: 540px;">
                                                    <div class="row g-0">
                                                        <div class="col-md-3">
                                                            <img src="<%#Eval("UrlImagen")%>" class="img-fluid rounded-start mt-4" alt="...">
                                                        </div>
                                                        <div class="col-md-8">
                                                            <div class="card-body" style="word-break: break-all; white-space: normal;">
                                                                <div class="row">
                                                                    <div class="col">
                                                                        <h5 class="card-title"><%#Eval("Nombre") %></h5>
                                                                    </div>
                                                                </div>

                                                                <div class="row">
                                                                    <div class="col">

                                                                        <p class="card-text"><small class="text-muted">Cod: <%#Eval("Codigo") %></small></p>
                                                                        <p class="card-text mt-2">$ <%#Eval("PrecioUnitario") %></p>
                                                                    </div>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                            <p class="card-text mt-2">$ <%#Eval("PrecioTotal") %></p>
                        </ItemTemplate>
                    </asp:Repeater>

                </div>
            </div>
            <%-- Fin Barra de navegacion --%>

            <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
            </asp:ContentPlaceHolder>
        </div>
    </form>
    <%-- Desarrollo OffCanvas --%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>
